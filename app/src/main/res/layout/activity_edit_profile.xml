<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="viewModel"
            type="com.hobbyer.android.viewmodel.activity.editprofileviewmodel.EditProfileViewModel"/>

    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">


                <include layout="@layout/toolbar"
                    android:id="@+id/toolbar"/>
                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/sign_dp_10"
                    android:layout_marginRight="@dimen/sign_dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.hobbyer.android.widget.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="@string/account"
                            android:textSize="@dimen/settings_dp1"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="Name"
                        android:maxLength="10"
                        android:inputType="text"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tvNameError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="Last Name"
                        android:maxLength="20"
                        android:inputType="text"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvLastNameError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/eEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="Email"
                        android:maxLength="30"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvEmailError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.hobbyer.android.widget.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="Gender"
                            android:textSize="18sp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_30"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_10">
                        <RadioGroup
                            android:id="@+id/rgGroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_5">
                            <RadioButton
                                android:id="@+id/rdMail"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:padding="@dimen/dp_10"

                                android:layout_marginStart="@dimen/dp_10"
                                android:buttonTint="@color/black"
                                android:text="Male" />
                            <RadioButton
                                android:id="@+id/rdFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:padding="@dimen/dp_10"
                                android:buttonTint="@color/black"
                                android:text="Female" />
                        </RadioGroup>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/gender"
                            android:visibility="gone"
                            android:layout_weight="0.16"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyTextView
                        android:id="@+id/etDOB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:onClick="@{(v)->viewModel.onClickView(v)}"

                        android:drawableRight="@drawable/ic_date"
                        android:hint="Date Of Birth (optional)"
                        android:inputType="text"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvdobError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:background="@drawable/bg_edittext"
                        >
                    <TextView
                        android:id="@+id/ietCountryCode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:maxLength="4"
                        android:onClick="@{(v)->viewModel.onClickView(v)}"
                        android:text="+1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="14sp"/>
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etPhone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:layout_weight=".8"
                        android:hint="Phone Number"
                        android:maxLength="10"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvPhoneError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:weightSum="1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:background="@drawable/bg_edittext"
                        >
                    <TextView
                        android:id="@+id/tvAlternate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:maxLength="4"
                        android:onClick="@{(v)->viewModel.onClickView(v)}"
                        android:text="+1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="14sp"/>
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etAlternateNumber"
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:background="@android:color/transparent"
                        android:hint="Alternate Phone Number(optional)"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/sign_dp_10"
                    android:layout_marginRight="@dimen/sign_dp_10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.hobbyer.android.widget.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="Contact"
                            android:textSize="@dimen/settings_dp1"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etStreet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="Street Address, P.O.box, company name C/O"
                        android:inputType="text"
                        android:maxLength="40"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvStreetError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etApartmentAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="Apartment, Suits, Unit, Building, Floor, etc."
                        android:inputType="text"
                        android:maxLength="40"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvApartmentError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etCity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="City"
                        android:maxLength="20"
                        android:inputType="text"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvCityError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etPostCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="Postal Code, Size"
                        android:maxLength="6"
                        android:inputType="number"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvpostCodeError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/bg_edittext"
                    android:orientation="horizontal"
                    android:drawableRight="@drawable/ic_expand_more"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <TextView
                        android:id="@+id/spCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:spinnerMode="dropdown"
                        android:gravity="center"
                        android:layout_margin="0.5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txCity"
                        android:visibility="gone"
                        android:layout_weight="0.16"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="7457172508"
                        android:maxLength="10"
                        android:inputType="number"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/sign_dp_10"
                    android:layout_marginRight="@dimen/sign_dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.hobbyer.android.widget.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="Emergency Contact"
                            android:textSize="@dimen/settings_dp1"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etEmergencyName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="Emergency Contact Name"
                        android:inputType="text"
                        android:maxLength="40"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvEmergencyNameError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/colorRed"
                    android:visibility="gone"
                    android:text="dgfrg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_row"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    >
                    <com.hobbyer.android.widget.customfonts.MyEditText
                        android:id="@+id/etEmergencyNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:gravity="left|center"
                        android:hint="Emergency Contact Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_margin="0.5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvEmergencyPhoneError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/colorRed"
                    android:visibility="invisible"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="dgfrg"/>
                <Button
                    android:id="@+id/btEditProfileSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="@{(v)->viewModel.onClickView(v)}"
                    android:text="Done"
                    android:background="@drawable/bg_button_yellow"/>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

            </LinearLayout>
    </LinearLayout>
</layout>