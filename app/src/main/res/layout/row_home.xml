<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="3dp"
    android:paddingEnd="3dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/white_background_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/pbHome"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imStudioImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_image" />
        </FrameLayout>


        <com.hobbyer.android.widgets.MyTextView
            android:id="@+id/tvStudioName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxLines="2"
            android:text="Gym Time"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:font_name="monAlSemi"/>
        <com.hobbyer.android.widgets.MyTextView
            android:id="@+id/tvStudioDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxLines="2"
            android:visibility="visible"
            android:text=""
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:font_name="monAlRegular"
            />
        <com.hobbyer.android.widgets.MyTextView
            android:id="@+id/tvStudioDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxLines="4"
            android:layout_marginTop="@dimen/dp_5"
            android:text="Goldâ€™s Gym-Wintergreen Plagdfg fgdfb gfdb  gdfgfv xgdrfg gdfgfg"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:font_name="monAlRegular"

            />
        <LinearLayout
            android:id="@+id/llFindClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@drawable/bg_row_black"
            android:paddingTop="@dimen/city_dp_5"
            android:paddingBottom="@dimen/city_dp_5"
            android:paddingStart="@dimen/sp_15"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginTop="7dp"

            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">
            <com.hobbyer.android.widgets.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                app:font_name="monAlRegular"
                android:text="Find a Class"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>