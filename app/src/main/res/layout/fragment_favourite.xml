<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.hobbyer.android.api.response.auth.favouriteuserview.FavouriteUserViewResponseContentList" />
    </data>

    <LinearLayout
        android:id="@+id/mFavouritesLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="12dp"
        android:visibility="visible">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvFavourites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:visibility="visible"
            android:elevation="5dp">


        </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="12dp"
        android:visibility="gone">
        <com.hobbyer.android.widget.customfonts.MyTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="Coming Soon"
            />
    </LinearLayout>
    </LinearLayout>
</layout>